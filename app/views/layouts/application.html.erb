<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Smalltalk</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>
  </head>
  <body ng-controller="MainCtrl">
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Comments</a>
        </div>
        <div class="collapse navbar-collapse">
          <div ng-cloak>
            <ul class="nav navbar-nav navbar-right">
              <li ng-if="currentUser" class="username">{{currentUser.email}}</li>
              <li ng-if="currentUser"><a href="/logout">Logout</a></li>
              <li ng-hide="currentUser"><a href="/login">Login</a></li>
              <li ng-hide="currentUser"><a href="/signup">Signup</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="starter-template">
        <div ng-if="initialLoad">
          <p>Configuration is loading...</p>
        </div>
        <div ng-cloak>
          <p>Hello {{currentUser}}!</p>
        </div>
      </div>
    </div>

    <%= javascript_include_tag 'application' %>
  </body>
</html>
